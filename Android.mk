$(WLAN_FIRMWARE_SYMLINKS): $(LOCAL_INSTALLED_MODULE)
	@echo "Creating WLAN firmware symlinks: $@"
	$(hide) ln -sf /mnt/vendor/persist/qca6390/wlan_mac.bin $@/wlan_mac.bin

ALL_DEFAULT_INSTALLED_MODULES += \
    $(CNE_SYMLINKS) \
    $(EGL_32_SYMLINKS) \
    $(EGL_64_SYMLINKS) \
    $(RFS_MSM_ADSP_SYMLINKS) \

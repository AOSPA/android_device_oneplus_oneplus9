cc_library_static {
    name: "libinit_oplus",
    recovery_available: true,
    shared_libs: ["libbase"],
    srcs: ["init_oplus.cpp"],
}

prebuilt_etc {
    name: "fstab.default",
    src: "fstab.default",
    vendor: true,
}

prebuilt_etc {
    name: "init.oplus.camera.rc",
    src: "init.oplus.camera.rc",
    sub_dir: "init",
    vendor: true,
}

prebuilt_etc {
    name: "init.oplus.display.rc",
    src: "init.oplus.display.rc",
    sub_dir: "init",
    vendor: true,
}

prebuilt_etc {
    name: "init.oplus.overlay.rc",
    src: "init.oplus.overlay.rc",
    sub_dir: "init",
    vendor: true,
}

prebuilt_etc {
    name: "init.oplus.perf.rc",
    src: "init.oplus.perf.rc",
    sub_dir: "init",
    vendor: true,
}

prebuilt_etc {
    name: "init.oplus.sensors.rc",
    src: "init.oplus.sensors.rc",
    sub_dir: "init",
    vendor: true,
}

prebuilt_etc {
    name: "init.oplus.telephony.rc",
    src: "init.oplus.telephony.rc",
    sub_dir: "init",
    vendor: true,
}

prebuilt_etc {
    name: "init.target.rc",
    src: "init.target.rc",
    sub_dir: "init/hw",
    vendor: true,
}

prebuilt_etc {
    name: "ueventd.oplus.rc",
    filename: "ueventd.rc",
    src: "ueventd.oplus.rc",
    device_specific: true,
}

sh_binary {
    name: "init.oplus.post_boot.sh",
    src: "init.oplus.post_boot.sh",
    vendor: true,
}
